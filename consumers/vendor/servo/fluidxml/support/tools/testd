#!/usr/bin/env sh

cd "$(dirname "$0")"
. "./.common.sh"
cd ../..

tester="./support/tools/testv"

test_handler()
{
        "$tester" || true

        while read -d '' e; do
                ## test -f skips a file descriptor written by vim.
                test -f "$e" && "$tester" || true
        done
}

watch "specs/" "source/" | dsstore_filter | test_handler
